<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForecastFragment">

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#b5dafe"
        android:layout_margin="15dp"
        android:orientation="vertical" >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_margin="16dp">>

            <TextView
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:textSize="25dp"
                android:gravity="center"
                android:text="Mon" />

            <ImageView
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/sunny" />

            <TextView
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:text="Sunny 30*C-32*C" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_margin="16dp">>

            <TextView
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:textSize="25dp"
                android:gravity="center"
                android:text="Tue" />

            <ImageView
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/sunny" />

            <TextView
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:text="Sunny 30*C-32*C" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_margin="16dp">>

            <TextView
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:textSize="25dp"
                android:gravity="center"
                android:text="Wed" />

            <ImageView
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/rainy" />

            <TextView
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:text="rainy\n14*C-20*C" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_margin="16dp">>

            <TextView
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:textSize="25dp"
                android:gravity="center"
                android:text="Thurs" />

            <ImageView
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/sunny" />

            <TextView
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:text="Sunny 30*C-32*C" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_margin="16dp">>

            <TextView
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:textSize="25dp"
                android:gravity="center"
                android:text="Fri" />

            <ImageView
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/rainy" />

            <TextView
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:text="rainy 10*C-12*C" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_margin="16dp">>

            <TextView
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:textSize="25dp"
                android:gravity="center"
                android:text="Sat" />

            <ImageView
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/sunny" />

            <TextView
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:text="Sunny 27*C-30*C" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_margin="16dp">>

            <TextView
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:textSize="25dp"
                android:gravity="center"
                android:text="Sun" />

            <ImageView
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/sunny" />

            <TextView
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:text="Sunny 33*C-34*C" />
        </LinearLayout>
</LinearLayout>
</FrameLayout>